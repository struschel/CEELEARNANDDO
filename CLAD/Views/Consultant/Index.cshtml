@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@model IEnumerable<CLAD.Models.ConsultantViewModel>


@{
    ViewData["Title"] = "Consultants";
}

<h2>Consultants</h2>
<hr />

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-sm-4">
                <a asp-action="Details" asp-controller="Users" asp-route-id="@item.User.Id"><img class="mx-auto d-block" src="@item.User.GetProfileImageUrl()" style="border-radius: 50%; width: 150px; height: 150px;" /></a>
                <br />
                <a asp-controller="Users" asp-action="Details" asp-route-id="@item.User.Id"><h2><span style="text-align: center;">@item.User.UserName</span></h2></a>
                <br />
                <p>@item.User.GetDescription().TruncateHtml(200, "...")</p>


            </div>
        }
    </div>
</div>
