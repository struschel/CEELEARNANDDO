@model Article
<li class="col-md-4 mb-5 list-unstyled">
    <div class="card h-100">
        <div class="card-body">
            <h2 class="card-title">@Html.DisplayFor(modelItem => Model.Title)</h2>
            <p>
                <div class="font-weight-bold float-left mr-3">Author: </div><div>@Model.Author.GetDisplayName()</div>
            </p>
            <p class="card-text">@Html.Raw(Model.Content.TruncateHtml(150, "..."))</p>
            <br />
            @foreach (var tag in Model.Tags)
            {
                <a asp-controller="Articles" asp-action="Tag" asp-route-id="@tag.TagId" class="badge badge-secondary">
                    @tag.Tag.Name
                </a>
            }
        </div>
        <div class="card-footer">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">Verder Lezen</a>
        </div>
    </div>
</li>