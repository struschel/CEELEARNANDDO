@model UserProfileEditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form method="post" enctype="multipart/form-data" asp-controller="Users" asp-action="Edit">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload Avatar:</p>
            <input type="file" name="AvatarImage">
        </div>
    </div>

        <div class="form-group">
        <div class="col-md-10">
            <label asp-for="DisplayName"></label>
            <input asp-for="DisplayName">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload">
        </div>
    </div>
</form>

